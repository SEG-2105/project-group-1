<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ClientRequestMenuActivity">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <Button
            android:id="@+id/clientRequestMenuPrevious"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Previous" />

        <Button
            android:id="@+id/clientRequestMenuActive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Active" />

        <Button
            android:id="@+id/clientRequestMenuInactive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Inactive" />

        <Button
            android:id="@+id/clientRequestMenuAll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View All" />

        <ListView
            android:id="@+id/clientRequestMenuList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>