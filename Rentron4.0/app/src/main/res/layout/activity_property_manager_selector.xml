<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PropertyManagerSelector">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <TextView
            android:id="@+id/pmSelectorNameTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/defaultTextSize"
            android:text="TextView" />

        <TextView
            android:id="@+id/pmSelectorEmailTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/defaultTextSize"
            android:text="TextView" />

        <EditText
            android:id="@+id/pmSelectorCommissionEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number" />

        <Button
            android:id="@+id/pmSelectorPmRequest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Request/Add" />

        <Button
            android:id="@+id/pmSelectorRemovePm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Remove" />

        <ListView
            android:id="@+id/pmSelectorPmList"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>