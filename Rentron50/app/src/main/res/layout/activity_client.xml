<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.clientActivity">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <Button
            android:id="@+id/logoutButtonClient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/log_out" />

        <Button
            android:id="@+id/requestsButtonClient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/requests" />

        <Button
            android:id="@+id/myPropertiesButtonClient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/my_properties" />

        <Button
            android:id="@+id/filterButtonClient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/filter" />

        <ListView
            android:id="@+id/propertyListClient"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>